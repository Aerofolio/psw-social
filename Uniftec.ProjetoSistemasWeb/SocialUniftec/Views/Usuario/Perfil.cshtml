<div class="card">
	<!-- Cover image -->
	<div class="h-200px rounded-top" style="background-image:url('https://social.webestica.com/assets/images/bg/05.jpg'); background-position: center; background-size: cover; background-repeat: no-repeat;"></div>
	<!-- Card body START -->
	<div class="card-body py-0">
		<div class="d-sm-flex align-items-start text-center text-sm-start">
			<div>
				<!-- Avatar -->
				<div class="avatar avatar-xxl mt-n5 mb-3">
					<img class="avatar-img rounded-circle border border-white border-3" src="data:image/png;base64,@ViewBag.UsuarioSendoVisto?.FotoPerfil" alt="">
				</div>
			</div>
			<div class="ms-sm-4 mt-sm-3">
				<!-- Info -->
				<h1 class="mb-0 h5">@ViewBag.UsuarioSendoVisto?.Nome @ViewBag.UsuarioSendoVisto?.Sobrenome <i class="bi bi-patch-check-fill text-success small"></i></h1>
				<p>@ViewBag.UsuarioSendoVisto?.Amigos?.Count Amigos</p>
			</div>
			<!-- Button -->
            <div class="d-flex mt-3 justify-content-center ms-sm-auto">
                @if(ViewBag.UsuarioSendoVisto?.Id == ViewBag.UsuarioLogado?.Id){
                    <div class="dropdown">
                        <button class="icon-md btn btn-light" type="button" id="profileAction2" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-three-dots"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileAction2">
                            <li><a class="dropdown-item" asp-controller="Usuario" asp-action="Alterar"> <i class="bi bi-gear fa-fw pe-2"></i>Editar Informações</a></li>
                        </ul>
                    </div>
                }
                else if (ViewBag.UsuarioLogado?.UsuarioAmigo(ViewBag.UsuarioSendoVisto?.Id)){
                    <button class="btn btn-danger-soft me-2" type="button"> <i class="fas fa-user-plus pe-1"></i> Remover Amigo </button>
                }
                else {
                    <button class="btn btn-success-soft me-2" type="button"> <i class="fas fa-user-plus pe-1"></i> Adicionar Amigo </button>
                }
            </div>
		</div>
		<!-- List profile -->
		<ul class="list-inline mb-0 text-center text-sm-start mt-3 mt-sm-0 mb-3">
			<li class="list-inline-item"><i class="bi bi-geo-alt me-1"></i>@ViewBag.UsuarioSendoVisto?.Cidade / @ViewBag.UsuarioSendoVisto?.Uf.ToString()</li>
            <li class="list-inline-item"><i class="bi bi-cake me-1"></i>@ViewBag.UsuarioSendoVisto?.DataComemorativa.ToString("dd/MM/yyyy")</li>
            <li class="list-inline-item"><i class="bi @((int?)@ViewBag.UsuarioSendoVisto?.Sexo == 0 ? "bi-gender-male" : "bi-gender-female") me-1"></i>@ViewBag.UsuarioSendoVisto?.Sexo</li>
		</ul>
        <div>
            <p>@ViewBag.UsuarioSendoVisto?.Bio</p>
        </div>
	</div>

</div>

<div class="row g-4 mt-3">
