		<div class="card">
			<!-- Card header START -->
			<div class="card-header d-sm-flex justify-content-between align-items-center border-0">
				<h5 class="card-title">Amigos <span class="badge bg-danger bg-opacity-10 text-danger">@ViewBag.UsuarioSendoVisto?.Amigos?.Count</span></h5>
                <a class="btn btn-primary-soft btn-sm" asp-controller="Usuario" asp-action="Amigos"> Ver todos amigos</a>
			</div>
			<!-- Card header END -->
			<!-- Card body START -->
			<div class="card-body position-relative pt-0">
				<div class="row g-3">
                    
                    @foreach(var amigo in @ViewBag.UsuarioSendoVisto?.Amigos){
                        <div class="col-6">
                            <!-- Friends item START -->
                            <div class="card shadow-none text-center h-100">
                                <!-- Card body -->
                                <div class="card-body p-2 pb-0">
                                    <div class="avatar  avatar-xl">
                                        <a asp-controller="Usuario" asp-action="Perfil" asp-route-id="@amigo?.Id"><img class="avatar-img rounded-circle" src="data:image/png;base64,@amigo?.FotoPerfil" alt=""></a>
                                    </div>
                                    <h6 class="card-title mb-1 mt-3"> <a href="#!"> @amigo?.Nome @amigo?.Sobrenome </a></h6>								
                                    <p class="mb-0 small lh-sm mb-3">Clique para ver</p>

                                </div>

                            </div>
                            <!-- Friends item END -->
					    </div>
                    }

				</div>
			</div>
			<!-- Card body END -->
		</div>
	</div>
